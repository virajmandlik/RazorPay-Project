                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"razorpay_order_id\": \"order_123\",\n    \"razorpay_payment_id\": \"pay_123\",\n    \"razorpay_signature\": \"signature_hash\",\n    \"groupId\": \"OPTIONAL_GROUP_ID\"\n}",
                            "options": {
